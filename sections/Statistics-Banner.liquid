{% schema %}
{
  "name": "Statistics Banner",
  "class": "statistics-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Numbers Don't Lie"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Clinically backed. Derm-approved. Sensory-tested."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#A1CECB"
    },
    {
      "type": "header",
      "content": "Statistics"
    },
    {
      "type": "text",
      "id": "stat_1_value",
      "label": "First Statistic Value",
      "default": "+57%"
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "label": "First Statistic Label",
      "default": "Moisture"
    },
    {
      "type": "text",
      "id": "stat_2_value",
      "label": "Second Statistic Value",
      "default": "46%"
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "label": "Second Statistic Label",
      "default": "Redness"
    },
    {
      "type": "text",
      "id": "stat_3_value",
      "label": "Third Statistic Value",
      "default": ">60%"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Third Statistic Label",
      "default": "Improvement in complexion evenness"
    }
  ],
  "presets": [
    {
      "name": "Statistics Banner",
      "category": "Promotional"
    }
  ]
}
{% endschema %}

<div class="statistics-banner" style="background-color: {{ section.settings.background_color }};">
  <div class="statistics-banner__inner">
    <h2 class="statistics-banner__title">{{ section.settings.title }}</h2>
    <p class="statistics-banner__subtitle">{{ section.settings.subtitle }}</p>
    
    <div class="statistics-banner__stats">
      <div class="stat-item">
        <div class="stat-value">{{ section.settings.stat_1_value }}</div>
        <div class="stat-label">{{ section.settings.stat_1_label }}</div>
      </div>
      <div class="stat-item">
        <div class="stat-value">{{ section.settings.stat_2_value }}</div>
        <div class="stat-label">{{ section.settings.stat_2_label }}</div>
      </div>
      <div class="stat-item">
        <div class="stat-value">{{ section.settings.stat_3_value }}</div>
        <div class="stat-label">{{ section.settings.stat_3_label }}</div>
      </div>
    </div>
  </div>
</div>

<style>
/* --- Base Styles --- */
.statistics-banner {
  padding: 40px 20px;
  text-align: center;
  display: flex;
  justify-content: center;
}

.statistics-banner__inner {
  max-width: 1100px;
  width: 100%;
}

.statistics-banner__title {
  font-size: 32px;
  margin-bottom: 10px;
  font-weight: bold;
  color: #000;
}

.statistics-banner__subtitle {
  font-size: 14px;
  margin-bottom: 30px;
  color: #000;
}

.statistics-banner__stats {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 40px;
}

.stat-item {
  flex: 1 1 150px;
  max-width: 250px;
}

.stat-value {
  font-size: 42px;
  font-weight: bold;
  margin-bottom: 5px;
  color: #000;
}

.stat-label {
  font-size: 14px;
  color: #000;
  white-space: normal;
  line-height: 1.4;
}

/* --- Tablet (up to 1024px) --- */
@media screen and (max-width: 1024px) {
  .statistics-banner__title {
    font-size: 28px;
  }
  .statistics-banner__stats {
    gap: 30px;
  }
  .stat-value {
    font-size: 36px;
  }
}

/* --- Mobile (up to 768px) --- */
@media screen and (max-width: 768px) {
  .statistics-banner {
    padding: 30px 15px;
  }

  .statistics-banner__title {
    font-size: 24px;
  }

  .statistics-banner__subtitle {
    font-size: 12px;
    margin-bottom: 20px;
  }

  .statistics-banner__stats {
    gap: 20px;
  }

  .stat-item {
    flex: 0 0 45%;   /* â‰ˆ 2 columns per row */
    max-width: none;
  }

  .stat-value {
    font-size: 28px;
  }

  .stat-label {
    font-size: 12px;
  }
}
</style>