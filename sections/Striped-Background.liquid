<style>
/* Slim striped banner strip */
.striped-section {
  background-image: repeating-linear-gradient(
    to right,
    #2e4a2e 0px,
    #2e4a2e 121px,   /* green width +1px */
    #6baacb 121px,
    #6baacb 234px    /* blue end also shifted */
  );
  background-size: 229px 100%; /* earlier 226, now +1 for new cycle */
  
  width: 100%;
  height: 26px; /* slim strip height */
  
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 0 0.5rem;
  box-sizing: border-box;
  overflow: hidden;
}

/* Name styling with responsive font size */
.striped-section h1 {
  font-size: clamp(0.9rem, 2.5vw, 1.2rem);
  font-weight: bold;
  color: white;
  text-shadow: 1px 1px 4px rgba(0,0,0,0.4);
  font-family: 'Arial', sans-serif;
  margin: 0;
  line-height: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Extra tweak on very small screens */
@media (max-width: 400px) {
  .striped-section h1 {
    font-size: 0.8rem;
  }
}
</style>

<div class="striped-section">
  <h1>{{ section.settings.title }}</h1>
</div>

{% schema %}
{
  "name": "Striped Background",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading / Name Text",
      "default": "Founderâ€™s Story"
    }
  ],
  "presets": [
    {
      "name": "Striped Background With Name"
    }
  ]
}
{% endschema %}