<style>
.scma-footer {
  background:#f8f6f0;
  padding:40px 20px;
  font-family:serif;
  font-size:14px;
}
.scma-footer-content {
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
}
.scma-footer-left {
  max-width:300px;
  padding-right:30px;
}
.scma-footer-heading {
  font-weight:bold;
  margin-bottom:.3em;
  font-size:18px;
}
.scma-footer-subheading {
  margin-bottom:1em;
  font-size:16px;
}
.scma-footer-social {
  margin-top:20px;
}
.scma-social-icon {
  display:inline-flex;
  align-items:center;
  justify-content:center;
  width:40px;height:40px;
  border-radius:50%;
  border:1px solid #999;
  color:#999;
  margin-right:10px;
  transition:all .3s ease;
  background:transparent;
}
.scma-social-icon:hover {
  background:#999;
  color:#fff;
  transform:scale(1.1);
}
.scma-icon { width:20px; height:20px; fill:currentColor; }
.scma-footer-right {
  display:flex;
  gap:60px;
}

/* Responsive Styles */
@media(max-width:1024px){
  .scma-footer-right{ gap:30px; }
}
@media(max-width:768px){
  .scma-footer-content{ flex-direction:column; align-items:center; text-align:center; }
  .scma-footer-left{ max-width:100%; padding:0; margin-bottom:20px; }
  .scma-footer-right{ flex-direction:column; gap:30px; padding:0; }
  .scma-footer-column h4{ font-size:16px; }
}
@media(max-width:480px){
  .scma-social-icon{ width:35px;height:35px; margin:0 5px; }
  .scma-icon{ width:18px;height:18px; }
  .scma-footer-column h4{ font-size:14px; }
  .scma-footer-column a{ font-size:13px; }
}
</style>