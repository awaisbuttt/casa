{% schema %}
{
  "name": "Three Image",
  "settings": [],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image with two titles",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title_line1",
          "label": "Title (Line 1)",
          "default": "This is first line"
        },
        {
          "type": "text",
          "id": "title_line2",
          "label": "Title (Line 2)",
          "default": "This is second line"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "August 04, 2025"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Three Images with Two Titles & Date",
      "category": "Custom Sections",
      "blocks": [
        { "type": "image_block" },
        { "type": "image_block" },
        { "type": "image_block" }
      ]
    }
  ]
}
{% endschema %}

<div class="three-images-section">
  <div class="container">
    <div class="image-grid">
      {% for block in section.blocks %}
        <div class="image-item">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '500x' }}" alt="{{ block.settings.title_line1 }} {{ block.settings.title_line2 }}">
          {% endif %}
          <h3 class="title">
            {{ block.settings.title_line1 }}<br>
            {{ block.settings.title_line2 }}
          </h3>
          <p class="date">{{ block.settings.date }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.three-images-section {
  padding: 30px 40px; /* Added left & right padding of 40px */
}
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 60px;
}
.image-item {
  text-align: left;
}
.image-item img {
  width: 100%;
  height: auto;
  display: block;
}
.image-item .title {
  font-size: 18px;
  font-weight: 600;
  margin: 10px 0 5px;
  line-height: 1.4;
}
.image-item .date {
  font-size: 14px;
  color: #555; 
  margin-top:5px;
}
@media (max-width: 768px) {
  .image-grid {
    grid-template-columns: 1fr;
  }
}
</style>