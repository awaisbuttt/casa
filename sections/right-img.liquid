<div class="scma-wrapper">
  {% if section.settings.image != blank %}
    <div class="scma-image-container">
      <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="Selected Image" class="scma-image">
      {% if section.settings.image_text != blank %}
        <p class="scma-overlay">{{ section.settings.image_text }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% if section.settings.collection != blank %}
    <div class="scma-products">
      {% for product in collections[section.settings.collection].products %}
        <div class="scma-product">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

<style>
.scma-wrapper {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20px;
  padding: 20px;
}

.scma-image-container {
  position: relative;
  flex: 1;
}

.scma-image {
  width: 100%;
  height: auto;
  border-radius: 8px;
}

.scma-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #d6d636;
  font-family: cursive;
  font-size: 1.6rem;
  text-align: center;
  max-width: 80%;
  white-space: pre-line; /* âœ… Line breaks (\n) render honge */
}

.scma-products {
  flex: 1.5;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 15px;
}

.scma-product {
  border: 1px solid #ddd;
  padding: 10px;
  text-align: center;
  border-radius: 6px;
}

.scma-product img {
  max-width: 100%;
  height: auto;
  margin-bottom: 10px;
}

.scma-product h3 {
  font-size: 1rem;
  margin: 5px 0;
}

.scma-product p {
  color: #333;
  font-weight: bold;
}
</style>

{% schema %}
{
  "name": "Image with Products",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select Image"
    },
    {
      "type": "text",
      "id": "image_text",
      "label": "Overlay Text on Image",
      "default": "Waterless.\nPerformance-backed.\nSkin that feels like yours."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "Image with Products"
    }
  ]
}
{% endschema %}
