{% schema %}
{
  "name": "Custom Banner haf",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Daily Rituals from our Founder"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner haf"
    }
  ]
}
{% endschema %}

<section class="custom-banner">
  <div class="custom-banner__image" 
       style="background-image: url({{ section.settings.banner_image | image_url }});">
    <div class="custom-banner__overlay">
      <h2 class="custom-banner__heading">
        {{ section.settings.heading_text }}
      </h2>
    </div>
  </div>
</section>

<style>
  .custom-banner {
    width: 100%;
    height: 398px; /* fixed desktop height */
    position: relative;
    overflow: hidden;
    padding: 0 25px;
    box-sizing: border-box;
  }

  .custom-banner__image {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    overflow: hidden;
  }

  .custom-banner__overlay {
    background: rgba(0, 0, 0, 0.3);
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 10px;
  }

  .custom-banner__heading {
    font-size: 56px;
    font-weight: 500;
    color: #fff;
    text-align: center;
    margin: 0;
    line-height: 1.2;
    word-break: break-word;
  }

  /* ========== RESPONSIVENESS WITH TALLER HEIGHTS ========== */
  @media (max-width: 1024px) {
    .custom-banner {
      height: 350px;   /* more height for tablets */
      padding: 0 20px;
    }
    .custom-banner__heading {
      font-size: 40px;
    }
  }

  @media (max-width: 768px) {
    .custom-banner {
      height: 300px;   /* more height for mobiles */
      padding: 0 15px;
    }
    .custom-banner__heading {
      font-size: 28px;
    }
  }

  @media (max-width: 480px) {
    .custom-banner {
      height: 260px;   /* taller than before to feel breathing room */
      padding: 20px 10px;
    }
    .custom-banner__overlay {
      padding: 20px;
    }
    .custom-banner__heading {
      font-size: 24px;
    }
  }
</style>